Bootstrap: yum
OSVersion: 8
MirrorURL: http://mirror.centos.org/centos-%{OSVERSION}/%{OSVERSION}/os/$basearch/
Include: yum

%post
    git clone --recurse-submodule https://github.com/AndreaBarletta/SE4HPCDevOps2.git
    cd SE4HPCDevOps2
    sudo yum install openmpi-devel
    module load mpi
    ./build.sh

%runscript
    cd build
    ./test_multiplication
